<%- include ('../../layouts/header') %>
<%- include ('../../layouts/navbar') %>

<div class="container">
    <hr>

    <h2>Artigos</h2>
    <a class="btn btn-success" href="/admin/articles/new">Novo artigo</a>

    <hr>
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Título</td>
                <td>Slug</td>
                <td>Categoria</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.category.title %></td>
                    <td>
                        <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                        <a href="/articles/delete/<%= article.id %>" class="btn btn-danger" onclick="confirmarDelete(this)">Deletar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
   
<script>
    function confirmarDelete(value) {
        let ret = confirm('Deseja excluir?')
        if(ret) {
            let id = value
        }
    }
</script>
