<%- include ('./layouts/header') %>
<%- include ('./layouts/homenav') %>

<div class="container">
    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Bem-vindo</h1>
        <p class="lead">Este é um simples blog do guia do programador</p>
        <hr class="my-4">
        <p>Ele usa classes utilitárias para tipografia e espaçamento de conteúdo, dentro do maior container.</p>
        <a class="btn btn-primary btn-lg" href="#">Leia mais</a>
    </div>
    <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/articles/<%= article.slug %> " class="btn btn-success">Ler artigo</a>
            </div>
        </div>
    <% })  %>
    
</div>
<%- include ('./layouts/footer') %>